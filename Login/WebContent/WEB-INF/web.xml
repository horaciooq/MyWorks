<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
<distributable/>
<!-- ===================== Servlets ============================= -->
<servlet>
<servlet-name>HelloUser</servlet-name>
<servlet-class>com.loginpage.HelloUSerServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>MainPage</servlet-name>
<servlet-class>com.loginpage.MainPageServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>ShowLogin</servlet-name>
<servlet-class>com.loginpage.ShowLoginServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>ProcessLogin</servlet-name>
<servlet-class>com.loginpage.ProcessLoginServlet</servlet-class>
</servlet>
<servlet>
<servlet-name>ProcessLogout</servlet-name>
<servlet-class>com.loginpage.ProcessLogoutServlet</servlet-class>
</servlet>
<!-- ==================== Servlet mapping ======================= -->
<servlet-mapping>
<servlet-name>HelloUser</servlet-name>
<url-pattern>/HelloUser</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>MainPage</servlet-name>
<url-pattern>/MainPage</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>ShowLogin</servlet-name>
<url-pattern>/ShowLogin</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>ProcessLogin</servlet-name>
<url-pattern>/ProcessLogin</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>ProcessLogout</servlet-name>
<url-pattern>/ProcessLogout</url-pattern>
</servlet-mapping>
<!-- ========================= Session =========================== -->
<session-config>
<session-timeout>30</session-timeout>
</session-config>
<!-- ======================= Welcome page ======================== -->
<welcome-file-list>
<welcome-file>Index.jsp</welcome-file>
</welcome-file-list>
</web-app>